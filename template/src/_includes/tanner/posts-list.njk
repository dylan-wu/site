{% macro postsList(title, posts) %}

    <section class="text-gray-600 body-font">
        <div class="container px-5 pt-8 pb-12 mx-auto flex flex-wrap">
            <p class="mb-8 text-4xl flex items-start text-indigo-400 font-bold">{{ title }}</p>
            <div class="flex flex-wrap w-full">
                <div class="lg:w-3/5 md:w-3/4 md:pr-10 md:py-6">
                    {% for post in posts %}
                        {% if loop.index0 < 3 %}
                            <div class="mb-8">
                                <div class="flex relative">
                                    <a href="{{ post.url }}" class="text-2xl font-medium text-gray-900 title-font mb-2 truncate">{{post.data.title}}</a>
                                </div>
                                <div>
                                    <h1>{{post.date | postDate}}</h1>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="lg:w-2/5 md:w-1/4 flex justify-end">
                    <div class="lg:w-2/5 md:w-1/4 flex flex-col">
                        <h1 class="w-full font-bold">Other Posts</h1>
                        <div class="h-px mb-4 bg-indigo-500"></div>
                        <ul class="w-full flex flex-col">
                            {% for post in posts %}
                                {% if loop.index0 > 3 and loop.index0 < 13 %}
                                    <a href="{{ post.url }}" class="text-sm font-medium text-gray-400 hover:text-gray-600 title-font mb-2 truncate">{{post.data.title}}</a>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endmacro %}