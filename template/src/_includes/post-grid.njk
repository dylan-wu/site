{% for post in paged.posts %}
<div class="w-full sm:w-1/2 md:w-1/3 self-stretch p-2 mb-2">
    <div class="rounded shadow-md h-full">
        <a href="{{ post.url | url }}">
            {% if post.data.thumb %}
                <img class="w-full m-0 rounded-t" src="{{ post.data.thumb | url }}" width="960" height="500" alt="{{ post.data.title }}">
            {% else %}
                {% image "?" + post.data.title, post.data.title %} 
            {% endif %}
        </a>
        <div class="px-6 py-5">
            <div class="font-semibold text-lg mb-2">
                <a class="text-gray-900 hover:text-gray-700" href="{{ post.url | url }}">{{ post.data.title }}</a>
            </div>
            <p class="text-gray-700 mb-1" title="Published date">{{ post.data.page.date | readableDate }}</p>
            <p class="text-gray-800">
                {% if post.data.description %}
                {{ post.data.description }}
                {% else %}
                {{ post.templateContent | striptags | truncate(90, true) }}
                {% endif %}
            </p>
        </div>
    </div>
</div>
{% endfor %}